@using MVCIntroDemo.ViewModels.Product;
@model ProductViewModel

@{
    ViewData["Title"] = "All Products";
}

<div class="card" style="width: 18rem;">
    <div class="card-header">@ViewData["Title"]</div>
    <div class="card-body">
        <h5 class="card-text">Product name: @Model.Name</h5>
        <p class="card-text">Price: @Model.Price BGN</p>
    </div>
</div>
