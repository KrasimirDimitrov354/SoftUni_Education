@using MVCIntroDemo.ViewModels.Product;
@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "All Products";
}

<div class="container-fluid">
    <div class="row row-cols-4 justify-content-start" style="margin-bottom: 5px">
        <form asp-controller="Product" asp-action="All-Products" method="get">
            <div class="input-group">
                <input type="search" name="keyword" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                <button type="submit" class="btn btn-outline-primary">search</button>
            </div>
        </form>
    </div>
    <div class="card" style="width: 18rem;">
        <div class="card-header">@ViewData["Title"]</div>
        <ul class="list-group list-group-flush">
            @foreach (var product in Model)
            {
                <li class="list-group-item"><a href="/Product/Details/@product.Id">@product.Name - @product.Price BGN</a></li>
            }
        </ul>
    </div>
</div>