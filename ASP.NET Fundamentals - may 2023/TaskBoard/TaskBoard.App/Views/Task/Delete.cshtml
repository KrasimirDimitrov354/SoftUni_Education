@model TaskFormViewModel

@{
    ViewData["Title"] = "Delete Task";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<form asp-action="Delete">
    <div class="d-flex justify-content-center">
        <div class="card " style="width: 50rem;">
            <div class="card-body">
                <h3 class="card-title text-center">Title: @Model.Title</h3>
                <p class="card-text"><span class="fw-bold">Description: </span>@Model.Description</p>
            </div>
            <div class="mb-3 d-flex justify-content-center">
                <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete task: @Model.Title?')" />
            </div>
        </div>
    </div>
</form>